head
  title MOState Course Sorter
  link(href="vendor/bootstrap.css" rel="stylesheet" type="text/css")
  style.
    .course-list {
      list-style: none;
      border-left: solid red 2px;
      padding-bottom: 4em;
      background: #dbdbdb;
      width:100%
    }
    .course-list .course-description .Label {color:black}
    .course-list .course-title {font-size:2em}
    .course-list .course-actions {display:block;
      padding:.5em; margin-bottom:-1em; line-height: 1em}
    p.one-high {
      display: block; overflow: hidden;
      height: 1em; line-height: 1em;
    }
    ul { list-style: none; margin: 0; padding: 0 }
    li[data-link-course-id] {
      cursor: pointer;
      text-decoration: underline;
      padding: .5em;
    }
    li[data-link-course-id]:hover {
      background-color: #f2f2f2;
    }
    li.selected[data-link-course-id] {
      background-color: #62B8FF;
    }
body
  .container
    ul.course-list
    form.form#add-course
      .input-group
        label.input-group-addon(for="course-search" title="Eg: 'ART 200'") Course ID
        input.form-control#course-search
      ul#output-search
      .text-center(style="padding:1em")
        #warning.label.label-danger
  footer
    script(type="text/javascript" src="vendor/jquery-2.1.1.js")
    script(type="text/javascript" src="vendor/interact-1.2.4.js")
    script(type="text/javascript" src="vendor/fuse-1.2.0.min.js")
    script(type="text/javascript" src="script.js")