#course-search
  width: 300px
#search-output
  max-height: 100px
  overflow-y: auto
  list-style none
  margin 0
  padding 0
#hover-info .course-info
  width 300px
  margin-top 20px
  background white
  h3
    margin 0
  .hours
    position:relative
    >.credit-hours:before
      content: "Credit hrs: "
    >.lecture-hours:before
      content: "Lecture hrs: "
    >.lab-hours:before
      content: "Lab hrs: "
    >div:before
      font-weight: bold
    >div
      width: 33%
      float: left
      padding: 0
  .close
    display none